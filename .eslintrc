{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "jasmine": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "cy": true,
    "Cypress": true,
    "context": true,
    "xcontext": true,
    "xit": true,
    "it": true,
    "expect": true,
    "jest": true,
    "ActiveXObject": true,
    "Dygraph": true,
    "d3": true
  },

  "extends": [
    "dcos",
  ],

  "rules": {
    // DCOS-UI specific
    "camelcase": ["off", {"properties": "never"}], // This causes errors with mixin properties
    "no-unused-vars": ["error", {
      "args": "after-used",
      "argsIgnorePattern": "PluginSDK|^_",
      "varsIgnorePattern": "^_"
    }],
    "react/prop-types": "off", // This causes errors with many

    "eqeqeq": ["error", "smart"],
    "comma-dangle": ["error", "never"],
    "strict": ["error", "never"], // <-- fix
    "newline-before-return": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-new": "off",
    "no-trailing-spaces": ["error", { "skipBlankLines": false }],
    "no-underscore-dangle": "off",
    "no-use-before-define": "off",
    "keyword-spacing": ["error"],
    "semi": ["error"],
    "space-before-blocks": ["error", "always"],
    "spaced-comment": ["error", "always"],
    "valid-jsdoc": ["error", {
      "requireReturn": false,
      "requireParamDescription": false
    }],

    // Airbnb overwrites
    "arrow-body-style": "off",
    "prefer-spread": "off",
    "prefer-rest-params": "off",
    "prefer-arrow-callback": "off",
    "space-unary-ops": "off",
    "operator-assignment": "off",
    "object-property-newline": "off",
    "no-void": "off",
    "no-extra-boolean-cast": "off",
    "no-var": "off",
    "object-curly-spacing": "off",
    "no-param-reassign": "off",
    "prefer-const": ["error", {
      "destructuring": "all",
      "ignoreReadBeforeAssign": false
    }],
    "vars-on-top": "off",
    "prefer-template": "off",
    "no-else-return": "off",
    "space-infix-ops": "off",
    "array-callback-return": "off",
    "consistent-return": "off",
    "quote-props": "off",
    "no-restricted-syntax": "off",
    "padded-blocks": "off",
    "no-dupe-keys": "off", // ?
    "newline-per-chained-call": "off",
    "one-var-declaration-per-line": "off",
    "one-var": "off",
    "no-shadow": "off",
    "key-spacing": "off",
    "no-dupe-class-members": "off",
    "radix": "off",
    "no-throw-literal": "off",
    "wrap-iife": "off",
    "no-extra-semi": "off",
    "yoda": "off",
    "default-case": "off",
    "global-require": "off",
    "no-case-declarations": "off",
    "max-len": "off",
    "no-useless-constructor": "off",
    "no-return-assign": "off",
    "arrow-spacing": "off",
    "no-empty": "off",
    "no-new-wrappers": "off",
    "space-in-parens": "off",
    "new-cap": "off",
    "no-extra-label": "off", // ?
    "no-labels": "off", // ?
    "func-names": "off",
    "no-console": "off",
    "no-inner-declarations": "off",
    "dot-notation": "off",
    "no-floating-decimal": "off", // ?
    "no-unreachable": "off", // ?
    "no-undef": "error", // ?

    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",

    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/img-has-alt": "off",

    // React plugin
    "react/jsx-boolean-value": "off",
    "react/jsx-closing-bracket-location": "off",
    "react/jsx-equals-spacing": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-first-prop-new-line": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-no-target-blank": "off",
    "react/jsx-no-undef": "error",
    "react/jsx-quotes": "off",
    "react/jsx-sort-prop-types": ["off", {"ignoreCase": true}],
    "react/jsx-sort-props": "off",
    "react/jsx-space-before-closing": "off",
    "react/jsx-uses-vars": "error",
    "react/no-did-mount-set-state": "error",
    "react/no-did-update-set-state": "error",
    "react/no-find-dom-node": "off",
    "react/no-is-mounted": "off",
    "react/no-multi-comp": "error",
    "react/no-render-return-value": "off",
    "react/no-string-refs": "off",
    "react/no-unknown-property": "off",
    "react/prefer-es6-class": "off",
    "react/prefer-stateless-function": "off",
    "react/react-in-jsx-scope": "error",
    "react/require-extension": "off",
    "react/self-closing-comp": "off",
    "react/sort-comp": "off",
  }
}
